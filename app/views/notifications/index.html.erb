<% unread_only = params[:filter] == "unread" %>
<div class="p-6 py-8 sm:p-8 lg:p-12">
  <div class="flex justify-between mb-8">
    <h1 class="text-3xl font-semibold">Your Notifications</h1>
    <div class="inline-flex">
      <%= link_to "All", "?filter=all", class:"#{unread_only ? 'bg-gray-300' : 'bg-gray-400'} hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l" %>
      <%= link_to "Unread", "?filter=unread", class:"border-l #{unread_only ? 'bg-gray-400' : 'bg-gray-300'} hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r"%>
    </div>
  </div>

  <%= turbo_stream_from "notifications_index_list_#{current_user.id}" %>
  <div id="notifications">
    <%= render collection: @notifications, partial: "notifications/notification" %>
  </div>
</div>
